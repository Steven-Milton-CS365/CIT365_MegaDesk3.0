@page
@model MegaDesk3._0.Pages.DeskQuotes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Desk Quote</h4>
<hr />
<div class="row">
    <div class="col-lg-8">
        <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control"/>
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="DeskQuote.QuoteDate" class="control-label"></label>*@
                <input asp-for="DeskQuote.QuoteDate" type ="hidden" value="@DateTime.Now"class="form-control"/>
                <span asp-validation-for="DeskQuote.QuoteDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Width" class="control-label"></label>
                <input asp-for="DeskQuote.Width" class="form-control"/>
                <span asp-validation-for="DeskQuote.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Depth" class="control-label"></label>
                <input asp-for="DeskQuote.Depth" class="form-control"/>
                <span asp-validation-for="DeskQuote.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.NumberOfDrawers" class="control-label"></label>
                <select asp-for="DeskQuote.NumberOfDrawers" class="form-control">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                </select>
                <span asp-validation-for="DeskQuote.NumberOfDrawers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.RushDays" class="control-label"></label>
                <select asp-for="DeskQuote.RushDays" class="form-control">
                    <option value="14">14 Days</option>
                    <option value="7">7 Days</option>
                    <option value="5">5 Days</option>
                    <option value="3">3 Days</option>
                </select>
                <span asp-validation-for="DeskQuote.RushDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.DeskTopMaterial" class="control-label"></label>
                <div class="materials">
                    <input asp-for="DeskQuote.DeskTopMaterial" id="pine" type="radio" name="material" value="Pine" checked="checked" />
                    <label asp-for="DeskQuote.DeskTopMaterial" class="rbmaterial pine" for="pine">Pine</label>
                    <input asp-for="DeskQuote.DeskTopMaterial" id="rosewood" type="radio" name="material" value="Rosewood" />
                    <label asp-for="DeskQuote.DeskTopMaterial" class="rbmaterial rosewood" for="rosewood">Rosewood</label>
                    <input asp-for="DeskQuote.DeskTopMaterial" id="laminate" type="radio" name="material" value="Laminate" />
                    <label asp-for="DeskQuote.DeskTopMaterial" class="rbmaterial laminate" for="laminate">Laminate</label>
                    <input asp-for="DeskQuote.DeskTopMaterial" id="oak" type="radio" name="material" value="Oak" />
                    <label asp-for="DeskQuote.DeskTopMaterial" class="rbmaterial oak" for="oak">Oak</label>
                    <input asp-for="DeskQuote.DeskTopMaterial" id="veneer" type="radio" name="material" value="Veneer" />
                    <label asp-for="DeskQuote.DeskTopMaterial" class="rbmaterial veneer" for="veneer">Veneer</label>
                </div>
                <span asp-validation-for="DeskQuote.DeskTopMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>&nbsp;&nbsp;<a class="btn btn-light" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@*<div>
    <a asp-page="Index">Back to List</a>
</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
